<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="dummenorangetnv.controller.BayEditor"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:ux="sap.uxap" xmlns:layout="sap.ui.layout" xmlns:cc="dummenorangetnv.control" xmlns:c="sap.ui.commons">
	<Page 
	    title="BayEditor" 
	    enableScrolling="false"
	    showHeader="false">
		<Toolbar height="10rem" class="orangeHeader">
			<mvc:XMLView viewName="dummenorangetnv.view.BayDetailsHeader"/>
		</Toolbar>
		<Bar>
			<contentLeft>
				<Text text="Date:" class="sapUiSmallMarginBegin"/>
				<Text id="date_text_id" class="sap-custom-font-size" text="1970-01-01"></Text>
			</contentLeft>
			<contentRight>
				<Button icon="sap-icon://sys-cancel-2" press="onPrevPage"/>
				<Button icon="sap-icon://sys-enter-2" press="onPrevPage"/>
			</contentRight>
		</Bar>
		<cc:BayTable
		    id="bay_table_id"
		    minWidth="1050px"
		    items="{
    		        path: '/data'
		        }"
		    class="sapUiSmallMarginBeginEnd bay-table-border"
		    template="BayColumn"
		    templateShareable="true">
			<cc:columns>
				<cc:BayColumn text="GH-bay" colspan="2" class="bay-table-cell"/>
				<cc:BayColumn text="" minWidth="9rem"/>
				<cc:BayColumn text="%" />
				<cc:BayColumn text="Plants" />
				<cc:BayColumn text="p/m2" />
				<cc:BayColumn text="Planted" />
				<cc:BayColumn text="ROOT" />
				<cc:BayColumn text="VEG" />
				<cc:BayColumn text="REA" />
				<cc:BayColumn text="KO" />
				<cc:BayColumn text="HARV" />
				<cc:BayColumn text="OOG" />
				<cc:BayColumn text="Vaca" />
			</cc:columns>
			<cc:BayRowGroup
				ghbay="{gh_bay}"
				square="{square}"
				rows="{
				        path: 'plant',
				        templateShareable: true,
    		            filters : [{ path : 'deleted', operator : 'EQ', value1: false }]
				    }"
				oddweek="{
			                path: 'plant/0/planted_date',
					        formatter: '.formatOddWeek'
				        }">
			    <cc:BayRow
			        frstClmn="2">
					<cc:BayCell
					    class="bay-table-cell"/>
					<cc:BayCell
					    class="bay-table-cell">
                        <core:Icon
                            color="#541407"
                            src= "sap-icon://decline"
                            press="deleteBayRow"/>
    				</cc:BayCell>
					<cc:BayCell
					    width="220px"
					    class="bay-table-cell"
					    rederror="{
					                path: 'processed',
							        type:'sap.ui.model.type.Boolean',
							        formatter: '.formatProcessed'
						        }">
						<Text
						    text="{name}"/>
					</cc:BayCell>
					<cc:BayCell
					    width="70px"
					    class="bay-table-cell2"
					    onFocus="onInputFocus">
				        <Input
				            maxLength="7"
				            value="{
				                        path: 'percent',
				                        formatter: '.formatPercent'
				                   }"
			                change="changePercent"
			                submit="changePercent"/>
					</cc:BayCell>
					<cc:BayCell
				    	width="60px"
					    class="bay-table-cell2"
					    onFocus="onInputFocus">
					    <Input
					        maxLength="7"
					        value="{
				                        parts: [
				                            {path: 'percent'},
				                            {path: 'square'},
				                            {path: 'density'},
				                            {path: 'plants'}
				                        ],
				                        formatter: '.formatPlants'
				                   }" />
					</cc:BayCell>
					<cc:BayCell
					    class="bay-table-cell2"
					    onFocus="onInputFocus">
					    <Input
					        maxLength="3"
					        value="{density}"/>
					</cc:BayCell>
					<cc:BayCell
					    class="bay-table-cell2"
					    onFocus="onInputFocus">
					    <DatePicker
					        width="100px"
					        placeholder=" "
					        valueFormat="yyyy-ww-u"
					        displayFormat="yyyy-ww-u"
					        dateValue="{
					                        path: 'planted_date',
					                        formatter: '.formatDate'
					                    }"
				            change="changePlantedDate"/>
					</cc:BayCell>
					<cc:BayCell
					    class="bay-table-cell2"
					    onFocus="onInputFocus">
					    <Input
					        maxLength="3"
					        value="{root}"
					        fieldWidth="30px"
					        change="changeRoot"
					        submit="changeRoot"/>
					</cc:BayCell>
					<cc:BayCell
					    class="bay-table-cell2"
					    onFocus="onInputFocus">
					    <Input
					        maxLength="3"
					        value="{veg}"/>
					</cc:BayCell>
					<cc:BayCell
					    class="bay-table-cell2"
					    onFocus="onInputFocus">
					    <Input
					        maxLength="3"
					        value="{rea}"/>
					</cc:BayCell>
					<cc:BayCell
					    class="bay-table-cell2"
					    onFocus="onInputFocus">
					    <Input
					        maxLength="3"
					        value="{ko}"/>
					</cc:BayCell>
					<cc:BayCell
					    class="bay-table-cell2"
					    onFocus="onInputFocus">
					    <Input
					        maxLength="3"
					        value="{horv}"/>
					</cc:BayCell>
					<cc:BayCell
					    class="bay-table-cell2"
					    onFocus="onInputFocus">
					    <DatePicker
					        width="100px"
					        placeholder=" "
					        valueFormat="yyyy-ww-u"
					        displayFormat="yyyy-ww-u"
        			        dateValue="{
            		                        parts: [
					                            {path: 'oog_date'},
					                            {path: 'planted_date'},
					                            {path: 'root'},
					                            {path: 'veg'},
					                            {path: 'ko'},
					                            {path: 'rea'},
					                            {path: 'horv'}
					                        ],
            		                        formatter: '.formatOOGDate'
            		                    }"/>
					</cc:BayCell>
					<cc:BayCell
					    width="3rem"
					    class="bay-table-cell2"
					    onFocus="onInputFocus">
					    <Input
					        maxLength="3"
					        value="{vaca}"/>
					</cc:BayCell>
				</cc:BayRow>
				<cc:emptyRow>
				    <cc:BayRow
				        class="bay-row-height">
				        <cc:BayCell
    			            class="bay-table-cell"/>
    			        <cc:BayCell
    			            colspan="13"
    			            class="bay--empty-cell">
    			            <Text
    			                text="EMPTY"
    			                textAlign="Center"/>
    			        </cc:BayCell>
				    </cc:BayRow>
				</cc:emptyRow>
				<cc:ftRows>
                    <cc:BayRow>
                        <cc:BayCell />
                        <cc:BayCell />
                        <cc:BayCell
                            class="bay-table-cell">
                            <c:ProgressIndicator 
                                class="progress-bar-text-middle"
                                percentValue="{
                                            path: 'plant',
                                            formatter: '.calculatePercentInt'
                                        }"
                                height="4em"
                                displayValue="{
                                            path: 'plant',
                                            formatter: '.calculatePercentFloat'
                                        } %"/>
                            </cc:BayCell>
                            <cc:BayCell
                                class="bay-table-cell2"
                                colspan="10">
                                <TextArea
                                    width="100%"
                                    placeholder="Comments"
                                    value="{comments}"/>
                            </cc:BayCell>
                        <cc:BayCell />
                    </cc:BayRow>
				</cc:ftRows>
			</cc:BayRowGroup>
		</cc:BayTable>
	</Page>
</mvc:View>