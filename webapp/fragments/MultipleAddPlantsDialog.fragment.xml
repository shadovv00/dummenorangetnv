							<lForm:ResponsiveGridLayout labelSpan="1" emptySpan="1" columns="1"/>
						</lForm:layout>
						<lForm:formContainers>
							<lForm:FormContainer>
								<lForm:formElements>
									<lForm:FormElement label="Variety / Product form">
										<lForm:fields>
											<Select id="plantSelectorId" class="" change="onPlantChange" width="20em" 
												items="{ path: 'multiAddModel>/Plants', sorter: { path: 'id' } }">
												<core:Item key="{multiAddModel>id}" text="{multiAddModel>id} {multiAddModel>name}"/>
											</Select>
										</lForm:fields>
									</lForm:FormElement>
									<lForm:FormElement label="Percentage of Bay">
										<lForm:fields>
											<HBox class="">
												<Input id="plantPercentId" value="0" textAlign="End" width="6em"></Input>
												<Slider value="0" width="100%" min="0" max="100"></Slider>
												
											</HBox>
										</lForm:fields>
									</lForm:FormElement>
									<lForm:FormElement label="Number of plants">
										<lForm:fields>
											<Input id="plantNumberId" value="0" textAlign="End" width="6em"></Input>
										</lForm:fields>
									</lForm:FormElement>
								</lForm:formElements>
							</lForm:FormContainer>
						</lForm:formContainers>
